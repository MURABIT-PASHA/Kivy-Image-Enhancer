MDScreen:
    name: "splash"
    on_enter: app.splash_animation(logo=splash_logo, text=splash_text)
    MDFloatLayout:
        md_bg_color: 0.05, 0.07, 0.09, 1
        Image:
            id: splash_logo
            source: "assets/icons/logo.png"
            size_hint: .3, .3
            pos_hint: {"center_x": .5, "center_y": .55}
        MDLabel:
            id: splash_text
            opacity: 0
            text: "LIMONIT\nGAMES"
            pos_hint: {"center_x": .65, "center_y": .55}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: "25sp"
            font_name: "assets/fonts/Poppins-Regular.ttf"
        MDLabel:
            text: "IMAGE Enhancer"
            pos_hint: {"center_x": .5, "center_y": .2}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: "35sp"
            font_name: "assets/fonts/Poppins-Regular.ttf"
        MDLabel:
            text: "Created by MURABIT PASHA"
            pos_hint: {"center_x": .5, "center_y": .15}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: "13sp"
            font_name: "assets/fonts/Poppins-Regular.ttf"

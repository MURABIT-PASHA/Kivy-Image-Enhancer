MDScreen:
    name: "splash"
    MDFloatLayout:
        md_bg_color: 0.05, 0.07, 0.09, 1
        Image:
            source: "assets/icon/logo_foreground.png"
            size_hint: .4, .4
            pos_hint: {"center_x": .5, "center_y": .55}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Ellipse:
                    size: 130, 130
                    pos: 110, 250
        MDLabel:
            text: "Image Enhancer"
            pos_hint: {"center_x": .5, "center_y": .2}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: "35sp"
            font_name: "assets/fonts/Poppins-Regular.ttf"
        MDLabel:
            text: "Created by MURABIT PASHA"
            pos_hint: {"center_x": .5, "center_y": .15}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: "13sp"
            font_name: "assets/fonts/Poppins-Regular.ttf"
